# Example .env file for crypto-thing
# Place this file in your project directory

# Path to the actual config file (can be .env or .ini format)
CRYPTO_CONFIG_FILE=~/.config/crypto-thing/crypto.env

# Database configuration
DATABASE_URL=postgres://username:password@localhost:5432/crypto_thing?sslmode=disable

# Alternative database configuration (if not using DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=crypto_thing
# DB_USER=username
# DB_PASSWORD=password
# DB_SSLMODE=disable

# Coinbase API configuration
COINBASE_API_KEY=your_api_key
COINBASE_API_SECRET=your_api_secret
COINBASE_PASSPHRASE=your_passphrase

# Coinbase Cloud API configuration (alternative to above)
# COINBASE_API_KEY_NAME=your_key_name
# COINBASE_API_PRIVATE_KEY=your_private_key
# COINBASE_CLOUD_API_KEY_NAME=your_cloud_key_name
# COINBASE_CLOUD_API_SECRET=your_cloud_secret

# Rate limiting and retry configuration
COINBASE_RPM=10
COINBASE_MAX_RETRIES=3
COINBASE_BACKOFF_MS=500
